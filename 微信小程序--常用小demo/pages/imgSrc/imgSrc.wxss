/* pages/imgSrc/imgSrc.wxss */
.sweepCode .item{
  word-break:break-all;padding: 30rpx;
}
.sweepCode .item text{
  font-weight: bold;
}
.imgList{
  display: flex;flex-wrap:wrap;
}
.imgBox{
  width: 250rpx;height: 250rpx;position: relative;
}
.imgBox image{
  width: 100%;height: 100%;
}
.imgBox .delete{
  position: absolute;right: 0;top: 0;padding: 0 30rpx;line-height: 60rpx;color: #fff;background: rgba(0, 0, 0, 0.5);
}
.codeInt{
  padding:0 30rpx;line-height:80rpx;height: 80rpx;background: #999;color: #fff;
}
.code{
  display: flex;align-items: center;flex-direction: column;justify-content: center;
}
.code canvas{
  height: 200rpx;margin-top: 30rpx;
}
.qrcode{
  width: 200rpx;
}