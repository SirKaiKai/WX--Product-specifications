<!--pages/imgSrc/imgSrc.wxml-->
<view class="weui-uploader">
  <view class="weui-uploader__bd">
    <block wx:for="{{imagesList}}" wx:key="key">
      <view class="weui-uploader__file">
        <image data-index="{{index}}" class="weui-uploader__img" src="{{item}}" bindtap="previewImg"></image>
        <view class="delete-btn" data-index="{{index}}" catchtap="deleteImg2">删除</view>
      </view>
    </block>
    <view class="weui-uploader__input-box">
      <!-- <input value='上传' class="weui-uploader__input js_file" type="file" accept="image/jpg,image/jpeg,image/png,image/gif" multiple="" bindtap='uploader' name="images"></input> -->
      <button bindtap='uploader'>上传img1</button>
    </view>
  </view>
</view>
