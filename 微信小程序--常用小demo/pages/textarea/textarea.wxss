/* 文本框 */
.TextBox{position: relative;text-align: center;width: 300rpx;height: 150rpx;margin: 0 auto;}
.TextBox textarea{border: 1rpx solid #E5e5e5;width: 300rpx;height: 150rpx;margin: 0 auto;text-align: left;}
.TextBox text{display: inline-block;margin: 0 auto;width: 300rpx;height: 150rpx;border: 1rpx solid red;text-align: left;position: absolute;left: 0;top: 0;}


